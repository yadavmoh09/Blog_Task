<!DOCTYPE html>
<html>
  <head>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
      body {
        margin: 10px;
        padding: 5px;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">
          <img
            src="https://www.w3schools.com/howto/img_avatar2.png"
            alt="Logo"
            style="width: 40px"
            class="rounded-pill"
          />
        </a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/post/getAllPost/home"
                >Home <span class="sr-only"></span
              ></a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/post/userPost/getResponse"
                >Personal Post <span class="sr-only"></span
              ></a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="/post/userPost/getResponse"
                >Create Post <span class="sr-only"></span
              ></a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% if(datafound) {%> <%items.forEach(item => {%>
      <div class="col">
        <div class="card h-100">
          <div class="card-header">
            <% let postDate = new Date(item.createDate); let currentDate = new
            Date(); let diffTime = Math.abs(currentDate - postDate); let
            diffHours = Math.ceil(diffTime / (1000 * 60 * 60)); let diffDays =
            Math.ceil(diffTime / (1000 * 60 * 60 * 24));let minutes =
            Math.floor((diffTime % (1000 * 60 * 60)) / (1000 * 60)); %>
            <p class="card-text">
              <strong class="text-muted"><%=item.location %> </strong>
            </p>
            <p class="card-text">
              <% if(diffDays>1){ %>
              <small class="text-muted"
                >Created by <strong><%=item.username %></strong> <%= diffDays %>
                days ago
              </small>
              <%}else if (diffHours > 1) { %>
              <small class="text-muted"
                >Created by <strong><%=item.username %></strong> <%= diffHours
                %> hours ago
              </small>
              <% }else { %>
              <small class="text-muted"
                >Created by <strong><%=item.username %></strong> <%= minutes%>
                minutes ago <% } %></small
              >
            </p>
          </div>

          <!-- image slider start -->
          <div
            id="carouselExampleControls"
            class="carousel slide"
            data-bs-ride="carousel"
          >
            <div class="carousel-inner">
              <%item.content.media_location.forEach(element=>{%>
              <div class="carousel-item active">
                <img src="<%=element %>" class="d-block w-100" alt="..." />
              </div>
              <%})%>
            </div>
            <% if(item.content.media_location.length >1){%>
            <button
              class="carousel-control-prev"
              type="button"
              data-bs-target="#carouselExampleControls"
              data-bs-slide="prev"
            >
              <span
                class="carousel-control-prev-icon"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button
              class="carousel-control-next"
              type="button"
              data-bs-target="#carouselExampleControls"
              data-bs-slide="next"
            >
              <span
                class="carousel-control-next-icon"
                aria-hidden="true"
              ></span>
              <span class="visually-hidden">Next</span>
            </button>
            <% } %>
          </div>

          <!-- image slider end -->
          <!-- 
          <img
            src=".."
            class="card-img-top"
            alt="..."
          /> -->
          <div class="card-body">
            <h5 class="card-title"><%=item.title %></h5>
            <p class="card-text"><%=item.content.text %></p>
            <p class="card-text">
              <% item.tags.forEach((tag)=>{ %> #<%= tag %> <%})%>
            </p>
            <div class="card-footer">
              <% let updateDate = new Date(item.updateDate); let update_diffTime
              = Math.abs(currentDate - updateDate); let update_diffHours =
              Math.ceil(update_diffTime / (1000 * 60 * 60)); let update_diffDays
              = Math.ceil(update_diffTime / (1000 * 60 * 60 * 24));let
              updated_minutes = Math.floor((diffTime % (1000 * 60 * 60)) / (1000
              * 60)); %>
              <p class="card-text">
                <% if(update_diffDays> 1){ %>
                <small class="text-muted"
                  >Updated post <%= update_diffDays %> days ago
                </small>
                <% }else if (diffHours >1) { %>
                <small class="text-muted"
                  >Updated post <%= update_diffHours %> hours ago
                </small>
                <% }else { %>
                <small class="text-muted"
                  >Updated post <%= updated_minutes %> minutes ago <% }
                  %></small
                >
              </p>
              <div class="container mt-5">
                <form action="/post/getPost" method="GET">
                  <div class="input-group">
                    <input
                      type="text"
                      id="myInput"
                      name="post_id"
                      class="form-control"
                      value="<%=item.post_id %>"
                      style="visibility: hidden"
                    />
                    <button type="submit" class="btn btn-info form-control">
                      View Post
                    </button>
                  </div>
                </form>
              </div>
              <% if(pageType === "personal") {%>
              <div class="container mt-5">
                <form action="/post/deleteUserPost" method="POST">
                  <div class="input-group">
                    <input
                      type="text"
                      id="myInput"
                      name="post_id"
                      class="form-control"
                      value="<%=item.post_id %>"
                      style="visibility: hidden"
                    />
                    <button type="submit" class="btn btn-danger form-control">
                      Delete Post
                    </button>
                  </div>
                </form>
              </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
      <% });%> <% }else{ %>
      <h2>Data not found</h2>
      <% } %>
    </div>
  </body>
</html>
